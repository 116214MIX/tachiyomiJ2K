<?xml version="1.0" encoding="utf-8"?>
<tachiyomi.ui.catalogbrowse.FiltersBottomSheet
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingTop="8dp">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Filters"
    android:textSize="20sp"
    android:layout_marginStart="16dp"
    style="@style/TextAppearance.Medium.Body2"/>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/catalogbrowse_filters_recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="36dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:paddingEnd="8dp"
    android:background="@drawable/background_top_shadow">

    <Button
      style="@style/Theme.Widget.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/action_close"/>

    <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_weight="1"/>

    <Button
      style="@style/Theme.Widget.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/action_reset"/>

    <Button
      style="@style/Theme.Widget.Button.Colored"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/action_search"/>

  </LinearLayout>

</tachiyomi.ui.catalogbrowse.FiltersBottomSheet>
