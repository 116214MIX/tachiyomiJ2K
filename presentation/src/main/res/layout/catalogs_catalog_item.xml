<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/catalog_card"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?attr/selectableItemBackground"
  android:minHeight="56dp"
  android:paddingStart="12dp"
  android:paddingTop="12dp"
  android:paddingEnd="8dp"
  android:paddingBottom="12dp"
  tools:ignore="ContentDescription">

  <ImageView
    android:id="@+id/catalog_icon"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:contentDescription="@null"
    android:src="@mipmap/ic_launcher_round"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/catalog_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:textAppearance="@style/TextAppearance.Subtitle1"
    app:layout_constraintEnd_toStartOf="@id/catalog_install_flip"
    app:layout_constraintStart_toEndOf="@id/catalog_icon"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Source title" />

  <TextView
    android:id="@+id/catalog_description"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:ellipsize="end"
    android:maxLines="2"
    android:textAppearance="@style/TextAppearance.Body2.Secondary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/catalog_title"
    app:layout_constraintTop_toBottomOf="@id/catalog_description_barrier"
    tools:text="Source description" />

  <ViewAnimator
    android:id="@+id/catalog_install_flip"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:layout_constraintBottom_toBottomOf="@id/catalog_title"
    app:layout_constraintEnd_toStartOf="@id/catalog_settings_btn"
    app:layout_constraintTop_toTopOf="@id/catalog_title">

    <ImageView
      android:id="@+id/catalog_install_btn"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="8dp"
      android:src="@drawable/ic_file_download_black_24dp" />

    <ProgressBar
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="8dp" />

  </ViewAnimator>

  <ImageView
    android:id="@+id/catalog_settings_btn"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:padding="8dp"
    android:src="@drawable/ic_settings_black_24dp"
    app:layout_constraintBottom_toBottomOf="@id/catalog_title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/catalog_title" />

  <Space
    android:id="@+id/catalog_icon_space"
    android:layout_width="0dp"
    android:layout_height="24dp"
    app:layout_constraintBottom_toBottomOf="@id/catalog_title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/catalog_title" />

  <androidx.constraintlayout.widget.Barrier
    android:id="@+id/catalog_description_barrier"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:barrierDirection="bottom"
    app:constraint_referenced_ids="catalog_icon_space,catalog_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
